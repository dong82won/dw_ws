<?xml version="1.0"?>
<robot name="box_bot">

  <!-- ================= MATERIALS ================= -->
  <material name="red"><color rgba="1 0 0 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="green_dark"><color rgba="0 0.5 0 1"/></material>
  <material name="orange"><color rgba="1 0.5 0 1"/></material>
  <material name="box_bot_blue"><color rgba="0.088656 0.428691 0.491021 1"/></material>

  <!-- ================= BASE ================= -->
  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://boxbot_description/meshes/cute_cube.dae" scale="0.1 0.1 0.1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.02"/>
      <geometry>
        <box size="0.1 0.1 0.06"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 -0.02"/>
      <inertia ixx="0.003333" iyy="0.003333" izz="0.003333"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="base_link_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.06"/>
  </joint>

  <!-- ================= LEFT WHEEL ================= -->
  <link name="left_wheel_link">
    <visual>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.035" length="0.01"/></geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.035" length="0.01"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="1.53e-05" iyy="1.53e-05" izz="3.06e-05"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.06 -0.025"/>
    <axis xyz="1 0 0"/>
    <limit effort="10" velocity="10"/>
    <dynamics damping="0.1"/>
  </joint>

  <gazebo reference="left_wheel_link">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <!-- ================= RIGHT WHEEL ================= -->
  <link name="right_wheel_link">
    <visual>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.035" length="0.01"/></geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.035" length="0.01"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="1.53e-05" iyy="1.53e-05" izz="3.06e-05"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.06 -0.025"/>
    <axis xyz="1 0 0"/>
    <limit effort="10" velocity="10"/>
    <dynamics damping="0.1"/>
  </joint>

  <gazebo reference="right_wheel_link">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <!-- ================= CASTERS ================= -->
  <link name="front_caster_link">
    <visual><geometry><sphere radius="0.01"/></geometry></visual>
    <collision><geometry><sphere radius="0.01"/></geometry></collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="4e-07" iyy="4e-07" izz="4e-07"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster_link"/>
    <origin xyz="0.035 0 -0.05"/>
  </joint>

  <gazebo reference="front_caster_link">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
  </gazebo>

  <link name="back_caster_link">
    <visual><geometry><sphere radius="0.01"/></geometry></visual>
    <collision><geometry><sphere radius="0.01"/></geometry></collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="4e-07" iyy="4e-07" izz="4e-07"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="back_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_caster_link"/>
    <origin xyz="-0.035 0 -0.05"/>
  </joint>

  <gazebo reference="back_caster_link">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
  </gazebo>

  <!-- ================= DIFF DRIVE ================= -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.12</wheel_separation>
      <wheel_diameter>0.07</wheel_diameter>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <robot_base_frame>base_footprint</robot_base_frame>
    </plugin>
  </gazebo>

</robot>
