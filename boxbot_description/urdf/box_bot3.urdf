<?xml version="1.0" ?>
<robot name="boxbot" xmlns:xacro="http://ros.org/wiki/xacro">

    <material name="orange"><color rgba="1 0.5 0 1"/></material>
    <material name="green_dark"><color rgba="0 0.5 0 1"/></material>
    <material name="box_bot_blue"><color rgba="0.088656 0.428691 0.491021 1"/></material>

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://boxbot_description/meshes/cute_cube.dae" scale="0.1 0.1 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.06"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="2.0"/>
            <origin xyz="0.01 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00227" ixy="0" ixz="0" iyy="0.00227" iyz="0" izz="0.00333"/>
        </inertial>
    </link>
    <joint name="base_link_joint" type="fixed">
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
        <parent link="base_footprint" />
        <child link="base_link" />
    </joint>

    <link name="left_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry><cylinder length="0.01" radius="0.035"/></geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry><cylinder length="0.01" radius="0.035"/></geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.000063" ixy="0" ixz="0" iyy="0.0001225" iyz="0" izz="0.000063"/>
        </inertial>
    </link>
    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0 0.06 -0.025" rpy="0 0 0" />
        <child link="left_wheel_link"/>
        <parent link="base_link"/>
        <axis xyz="0 1 0"/>
        <limit effort="10.0" velocity="10.0"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>
    <gazebo reference="left_wheel_link">
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <minDepth>0.001</minDepth>
        <fdir1>1 0 0</fdir1>
        <maxVel>0.1</maxVel>
        <material>Gazebo/Green</material>
    </gazebo>

    <link name="right_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry><cylinder length="0.01" radius="0.035"/></geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry><cylinder length="0.01" radius="0.035"/></geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.000063" ixy="0" ixz="0" iyy="0.0001225" iyz="0" izz="0.000063"/>
        </inertial>
    </link>
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0 -0.06 -0.025" rpy="0 0 0" />
        <child link="right_wheel_link"/>
        <parent link="base_link"/>
        <axis xyz="0 1 0"/>
        <limit effort="10.0" velocity="10.0"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>
    <gazebo reference="right_wheel_link">
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <minDepth>0.001</minDepth>
        <fdir1>1 0 0</fdir1>
        <maxVel>0.1</maxVel>
        <material>Gazebo/Orange</material>
    </gazebo>

    <link name="front_caster_link">
        <visual>
            <geometry><sphere radius="0.01"/></geometry>
            <material name="green_dark"/>
        </visual>
        <collision>
            <geometry><sphere radius="0.01"/></geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.000004" ixy="0" ixz="0" iyy="0.000004" iyz="0" izz="0.000004"/>
        </inertial>
    </link>
    <joint name="front_caster_joint" type="fixed">
        <origin xyz="0.035 0 -0.05" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="front_caster_link"/>
    </joint>
    <gazebo reference="front_caster_link">
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <slip1>1.0</slip1>
        <slip2>1.0</slip2>
        <kp>2000000.0</kp>
        <kd>100.0</kd>
        <minDepth>0.001</minDepth>
        <material>Gazebo/Purple</material>
    </gazebo>


     <link name="rear_caster_link">
        <visual>
            <geometry><sphere radius="0.01"/></geometry>
            <material name="green_dark"/>
        </visual>
        <collision>
            <geometry><sphere radius="0.01"/></geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.000004" ixy="0" ixz="0" iyy="0.000004" iyz="0" izz="0.000004"/>
        </inertial>
    </link>
    <joint name="rear_caster_joint" type="fixed">
        <origin xyz="-0.035 0 -0.05" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="rear_caster_link"/>
    </joint>
    <gazebo reference="rear_caster_link">
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <slip1>1.0</slip1>
        <slip2>1.0</slip2>
        <kp>2000000.0</kp>
        <kd>100.0</kd>
        <minDepth>0.001</minDepth>
        <material>Gazebo/Purple</material>
    </gazebo>

    <link name="camera_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry><mesh filename="package://boxbot_description/meshes/sensors/realsense.dae" scale="1.0 1.0 1.0"/></geometry>
        </visual>
        <collision>
            <origin xyz="-0.02 0 -0.015" rpy="0 0 0"/>
            <geometry><box size="0.025 0.09 0.025"/></geometry>
        </collision>
        <inertial>
            <mass value="0.075"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="5.46e-05" ixy="0" ixz="0" iyy="7.81e-06" iyz="0" izz="5.46e-05"/>
        </inertial>
    </link>
    <joint name="camera_link_joint" type="fixed">
        <origin xyz="0.08 0 0.06" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="camera_link"/>
    </joint>

    <link name="laser_scan_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry><mesh filename="package://boxbot_description/meshes/sensors/rplidar.dae" scale="1.0 1.0 1.0"/></geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.0204" rpy="0 0 0"/>
            <geometry><cylinder length="0.0408" radius="0.0375"/></geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0 0 0.0204" rpy="0 0 0"/>
            <inertia ixx="6.06e-06" ixy="0" ixz="0" iyy="6.07e-06" iyz="0" izz="9.36e-06"/>
        </inertial>
    </link>
    <joint name="laser_scan_link_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.05"/>
        <parent link="base_link"/>
        <child link="laser_scan_link"/>
    </joint>

    <link name="imu_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry><box size="0.015 0.015 0.0025"/></geometry>
            <material name="box_bot_blue"/>
        </visual>
    </link>
    <joint name="imu_joint" type="fixed">
        <origin xyz="0.037 0.037 0.051" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="imu_link"/>
    </joint>

    
    <gazebo>
        <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
            <ros>
                <remapping>~/out:=joint_states</remapping>
            </ros>
            <update_rate>30</update_rate>
            <joint_name>left_wheel_joint</joint_name>
            <joint_name>right_wheel_joint</joint_name>
        </plugin>
    </gazebo>
    
    <gazebo>
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <ros>
                <namespace>/</namespace>
            </ros>
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>

            <wheel_separation>0.12</wheel_separation>
            <wheel_diameter>0.07</wheel_diameter>

            <max_wheel_torque>100</max_wheel_torque>
            <max_wheel_acceleration>0.7</max_wheel_acceleration>

            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>false</publish_wheel_tf>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_footprint</robot_base_frame>
        </plugin>
    </gazebo>
 
    <gazebo reference="camera_link">
        <sensor name="camera" type="depth">
            <visualize>true</visualize>
            <update_rate>30.0</update_rate>
            <camera name="camera">
                <horizontal_fov>1.5184</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.1</near>
                    <far>5.0</far>
                </clip>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <ros>
                    <remapping>camera/image_raw:=color/image_raw</remapping>
                    <remapping>camera/depth/image_raw:=depth/image_rect_raw</remapping>
                    <remapping>camera/camera_info:=color/camera_info</remapping>
                    <remapping>camera/depth/camera_info:=depth/camera_info</remapping>
                    <remapping>camera/points:=depth/color/points</remapping>
                </ros>
                <camera_name>d435i</camera_name>
                <frame_name>camera_depth_optical_frame</frame_name>
                <min_depth>0.1</min_depth>
                <max_depth>5.0</max_depth>
            </plugin>
        </sensor>
    </gazebo>

    <gazebo reference="laser_scan_link">
        <sensor name="lidar" type="ray">
            <always_on>true</always_on>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1.0</resolution>
                        <min_angle>0.00</min_angle>
                        <max_angle>6.28</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.12</min>
                    <max>8.0</max>
                    <resolution>0.015</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="scan_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <remapping>~/out:=scan</remapping>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>laser_scan_link</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <gazebo reference="imu_link">
        <sensor name="br_imu" type="imu">
            <always_on>true</always_on>
            <update_rate>100</update_rate>
            <imu>
                <angular_velocity>
                    <x><noise type="gaussian"><mean>0.0</mean><stddev>2e-4</stddev></noise></x>
                    <y><noise type="gaussian"><mean>0.0</mean><stddev>2e-4</stddev></noise></y>
                    <z><noise type="gaussian"><mean>0.0</mean><stddev>2e-4</stddev></noise></z>
                </angular_velocity>
                <linear_acceleration>
                    <x><noise type="gaussian"><mean>0.0</mean><stddev>1.7e-2</stddev></noise></x>
                    <y><noise type="gaussian"><mean>0.0</mean><stddev>1.7e-2</stddev></noise></y>
                    <z><noise type="gaussian"><mean>0.0</mean><stddev>1.7e-2</stddev></noise></z>
                </linear_acceleration>
            </imu>
            <plugin name="bytes_imu" filename="libgazebo_ros_imu_sensor.so">
                <ros>
                    <namespace>imu</namespace>
                    <remapping>~/out:=data</remapping>
                </ros>
                <initial_orientation_as_reference>false</initial_orientation_as_reference>
            </plugin>
        </sensor>
    </gazebo>
 
</robot>